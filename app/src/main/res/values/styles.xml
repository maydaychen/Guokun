<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="iv_back">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/margin_size_8dp</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/first_font</item>
    </style>

    <style name="tv_person_left">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/first_font</item>
    </style>

    <style name="iv_person_right">
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="button_red">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/boder_red</item>
    </style>

    <style name="tv_white_24_margin8">
        <item name="android:layout_margin">@dimen/margin_size_8dp</item>
        <item name="android:textColor">@color/font_colour_33</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 对话框样式 -->
    <style name="StyleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="tv_14_left_marginleft8_33">
        <item name="android:background">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/font_colour_33</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_8dp</item>
    </style>

    <style name="et_14_right_marginright8_99">
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/margin_size_8dp</item>
        <item name="android:textColor">@color/font_colour_99</item>
        <item name="android:textColorHint">@color/font_colour_99</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="tv_title_lease">
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:textColor">@color/font_colour_99</item>
        <item name="android:textColorHint">@color/font_colour_99</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>
</resources>
