<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.guokun.ui.activity.QuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_coupon_detail_back"
            style="@style/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_8dp"
            android:src="@drawable/back"/>

        <TextView
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"/>
    </RelativeLayout>

    <com.example.user.guokun.ui.widget.MyAffair_1
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_marginRight="@dimen/margin_size_8dp"
        android:background="@color/line_e7"/>

    <RelativeLayout
        android:id="@+id/rl_sao_question"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            style="@style/tv_person_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="扫码问题"/>

        <ImageView
            style="@style/iv_person_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuo_jian_tou"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_marginRight="@dimen/margin_size_8dp"
        android:background="@color/line_e7"/>

    <RelativeLayout
        android:id="@+id/rl_pay_question"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            style="@style/tv_person_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付问题"/>

        <ImageView
            style="@style/iv_person_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuo_jian_tou"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_marginRight="@dimen/margin_size_8dp"
        android:background="@color/line_e7"/>

    <RelativeLayout
        android:id="@+id/rl_order_question"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            style="@style/tv_person_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单问题"/>

        <ImageView
            style="@style/iv_person_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuo_jian_tou"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_marginRight="@dimen/margin_size_8dp"
        android:background="@color/line_e7"/>

    <RelativeLayout
        android:id="@+id/rl_account_question"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            style="@style/tv_person_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账户问题"/>

        <ImageView
            style="@style/iv_person_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuo_jian_tou"/>
    </RelativeLayout>

</LinearLayout>
