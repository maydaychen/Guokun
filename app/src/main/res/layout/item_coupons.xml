<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="104dp"
              android:id="@+id/ll_coupon"
              android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_coupon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingRight="60dp"/>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/font_red"/>

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_size_18sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textColor="@color/font_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_font"
            android:textSize="@dimen/font_size_18sp"/>

        <TextView
            android:id="@+id/tv_coupon_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_font"/>

        <TextView
            android:id="@+id/tv_coupon_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_font"/>

        <TextView
            android:id="@+id/tv_coupon_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期至：%1$s"
            android:textColor="@color/second_font"/>

        <TextView
            android:id="@+id/tv_coupon_time"
            android:text="可用时间：%1$s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_font"/>
    </LinearLayout>

</LinearLayout>