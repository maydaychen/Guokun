<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_8dp"
    android:layout_marginTop="@dimen/margin_size_8dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_10dp">

        <TextView
            android:id="@+id/tv_coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_size_18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="优惠券"
            android:textColor="@color/font_red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_font"
            android:textSize="@dimen/font_size_18sp" />

        <TextView
            android:id="@+id/tv_coupon_range"
            android:layout_width="wrap_content"
            android:text="仅限国坤按摩椅使用"
            android:layout_height="wrap_content"
            android:textColor="@color/second_font" />

        <TextView
            android:id="@+id/tv_coupon_store"
            android:text="适用于所有门店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_font" />

        <TextView
            android:id="@+id/tv_coupon_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_coupon_expiry"
            android:textColor="@color/second_font" />

        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/useable_day"
            android:textColor="@color/second_font" />
    </LinearLayout>

</LinearLayout>