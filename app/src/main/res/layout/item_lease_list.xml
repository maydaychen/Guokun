<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/iv_terminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_terminal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_size_8dp">

        <TextView
            android:id="@+id/tv_terminal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_4dp"
            android:text="设备号："/>

        <TextView
            android:id="@+id/lease_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_4dp"
            android:text="租赁日期："/>

        <TextView
            android:id="@+id/lease_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_4dp"
            android:text="截止日期："/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_colour_ee"/>
</RelativeLayout>